<div class="title-bar flex flex-v-center gutters">
  <% if current_user %>
    <%= link_to survey_responses_path(@survey), title: 'Back to the list of survey responses', class: 'button--back flex flex-v-center flex-1 flex-h-start' do %>
      <i class="material-icons">arrow_back</i><span>Responses list</span>
    <% end %>
  <% end %>
  <h1 class="h1--small-uppercase">Results <span class="normal">ID<%= @response.id %></span></h1>

  <div class="title-bar--hidden"></div>
</div>

<div class="container--medium content-padding">

  <div class="box--grey-light flex">
    <div class="flex-2-thirds">
      <p>
        <strong>F1:</strong>
        <%= @response.f1_score %>
      </p>

      <p>
        <strong>F2:</strong>
        <%= @response.f2_score %>
      </p>

      <p>
        <strong>F3:</strong>
        <%= @response.f3_score %>
      </p>

      <p>
        <strong>classification:</strong>
        <%= @response.classification.name %>
      </p>
    </div>

    <div class="flex-1-third">
      <h2>Filter results by</h2>
      <div>
        Filters go here
      </div>
    </div>
  </div>

  <div class="flex">
    <div class="flex-2-thirds">
      <div class="block--results">
        <h2><%= t('results.title1') %></h2>
        <div><%= t('results.content1') %></div>
      </div>

      <div class="block--results">
        <h2><%= t('results.title2') %></h2>
        <div><%= t('results.content2') %></div>
      </div>
    </div>

    <div class="flex-1-third">
      <div class="box--beige-light box-padding box-spacing box-margin-left">
        <h3>Contact</h3>
        <p class="text-14">For more information about The Future of Conservation project please email:</p>
        <p class="text-14"><a href="mailto:futureofconservation@gmail.com" title="Email The Future of Conservation">futureofconservation@gmail.com</a></p>
      </div>
    </div>
  </div>
</div>
