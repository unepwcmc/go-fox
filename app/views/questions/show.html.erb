<div class="container--small content-padding">
  <p id="notice"><%= notice %></p>

  <% I18n.available_locales.each do |locale| %>
    <h1><%= locale %></h1>
    <% I18n.locale = locale %>
    <p>
      <strong>Text:</strong>
      <%= @question.text %>
    </p>
  <% end %>

  <%= link_to 'Edit', edit_question_path(@question) %> |
  <%= link_to 'Back', questions_path %>
</div>
