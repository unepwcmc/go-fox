<%= form_with(model: classification, local: true) do |form| %>
  <% if classification.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(classification.errors.count, "error") %> prohibited this classification from being saved:</h2>

      <ul>
      <% classification.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <% I18n.available_locales.each do |locale| %>
    <h1><%= locale %></h1>
    <%= form.globalize_fields_for locale do |ff| %>
      <p>
        <%= form.label :name %>
        <%= ff.text_field :name, id: :classification_name %>
        <%= form.label :description %>
        <%= ff.text_area :description, id: :classification_description %>
        <%= form.label :results_description %>
        <%= ff.text_area :results_description, id: :classification_results_description %>
      </p>
    <% end %>
  <% end %>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
