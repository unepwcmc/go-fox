<div class="container--small content-padding">
  <h1><%= @survey.name %></h1>

  <p>
    <strong>Description:</strong>
    <%= @survey.description %>
  </p>

  <p>
    <strong>Published:</strong>
    <%= @survey.published %>
  </p>

  <p>
    <strong>Locked:</strong>
    <%= @survey.locked %>
  </p>

  <p>
    <strong>User:</strong>
    <%= @survey.user.email %> (<%= @survey.user.organisation_name %>)
  </p>

  <%= link_to "Take the survey", new_survey_response_path(@survey), class: 'button' %>
  <%= link_to 'Edit', edit_survey_path(@survey), class: 'button' %>
  <p>
    <popup icon="share" title="Share" url="<%= new_survey_response_url(@survey) %>"></popup>
  </p>
  <hr>

  <%= render partial: "surveys/customised_questions_table", locals: { survey: @survey } %>
</div>
