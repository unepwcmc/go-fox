  <% end %>

  <div class="field">
    <%= f.fields_for :options do |options_form| %>
      <%= render partial: 'surveys/option_fields', locals: {f: options_form} %>
    <% end %>
  </div>

  <div id="options-container"></div>

  <%= link_to_add_association f, :options, {
      'data-association-insertion-method': 'append',
      class: 'add-customised-question-option button button--beige button--plus'
    } do
  %>
    <i class="material-icons">add</i>
    Add Option
  <% end %>
  <hr>
</div>
