  <div class="field">
    <p>
      <%= f.label "Customised Question Title" %>
      <%= f.text_field :text %>
    </p>
  </div>

    <%= link_to_remove_association f, {class: "button button--beige button--minus button"} do %>
    <i class="material-icons">remove</i>
