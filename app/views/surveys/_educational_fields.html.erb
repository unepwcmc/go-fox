<% if survey.id.nil? %>

  <div class="field">
    <label for="">
      Participants' organisation name
    </label>
    <p>
      What is the name of the group/organisation to which the survey participants belong?
    </p>
    <%= form.text_field '[settings][participant_org_name]' %>
  </div>

  <div class="field">
    <label for="">
      Name of group/organisation of participants in the session
    </label>
    <p>
      Only answer this question if the group/organisation or participants is different from the one running the session (e.g. if you are running the session with staff of a particular organisation)
    </p>
    <%= form.text_area '[settings][name_of_group_organisation_of_participants]' %>
  </div>

  <div class="field">
    <%= render partial: 'form_elements/collection_buttons',
    locals: {
      form: form,
      type: "radio",
      title: "Participants' level of study",
      description: "Please select the most appropriate answer for the level of study at which you plan to use the survey",
      rb_config: ['[settings][participant_level_of_study]', surveys_data("participant_level_of_study"), :first, :last]
    } %>
    <%= form.text_field '[settings][participant_level_of_study_other]' %>
  </div>


  <div class="field">
    <%= render partial: 'form_elements/collection_buttons',
      locals: {
        form: form,
        type: "radio",
        option_class: "two-col",
        title: "Participants' specialism",
        description: "Lorem ipsum",
        rb_config: ['[settings][participant_specialism]', surveys_data("participant_specialism"), :first, :last]
      } %>
  </div>

  <div class="field">
    <label for="">
      Name of Course/module:
    </label>
    <%= form.text_field '[settings][participant_org_name]' %>
    <p>
      Lorem ipsum
    </p>
  </div>

  <div class="field">
    <label for="">
      Course website/url
    </label>
    <%= form.text_field '[settings][course_url]' %>
    <p>
      Lorem ipsum
    </p>
  </div>

  <div class="field">
    <label for="">
      Size of group
    </label>
    <%= form.text_field '[settings][size_of_group]' %>
    <p>
      Lorem ipsum
    </p>
  </div>

  <!---
  <div class="field">
    <%= render partial: 'form_elements/collection_buttons',
      locals: {
        form: form,
        type: "radio",
        option_class: "inline",
        title: "Follow up session?",
        description: "Lorem ipsum",
        rb_config: ['[settings][follow_up_session]', surveys_data("follow_up_session"), :first, :last]
      } %>
  </div>
  --->

<!---
  <div class="field">
    <label for="">
      Anonymity.
    </label>
    <%= form.collection_radio_buttons '[settings][anonymity]', surveys_data("anonymity"), :first, :last %>
  </div>
  --->

<% else %>
  <p>
    Previous survey ID: <%= survey.settings["survey_previous_id"] %>
  </p>

  <p>
    Default language: <%= survey.settings["default_language"] %>
  </p>

  <p>
    Participants' organisation name: <%= survey.settings["participant_org_name"] %>
  </p>

  <p>
    Name of group/organisation of participants in the session: <%= survey.settings["name_of_group_organisation_of_participants"] %>
  </p>

  <p>
    Participants' level of study: <%= survey.settings["participant_level_of_study"] %>
  </p>

  <p>
    Participants' level of study (other): <%= survey.settings["participant_level_of_study_other"] %>
  </p>

  <p>
    Participants' specialism: <%= survey.settings["participant_specialism"] %>
  </p>

  <p>
    Name of Course/module: <%= survey.settings["name_of_course"] %>
  </p>

  <p>
    Course website/url: <%= survey.settings["course_url"] %>
  </p>

  <p>
    Size of group: <%= survey.settings["size_of_group"] %>
  </p>
  <!---
  <p>
    Follow up session?: <%= survey.settings["follow_up_session"] %>
  </p>
  --->
  <p>
    Session date: <%= survey.settings["session_date"].map{|k,v| v}.join("-").to_date %>
  </p>

  <p>
    Anonymity: <%= survey.settings["anonymity"] %>
  </p>

  <p>
    What do you hope to achieve from using GO-FOX with this class?: <%= survey.settings["hope_to_achieve"] %>
  </p>
<% end %>
