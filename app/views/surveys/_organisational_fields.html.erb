<% if survey.id.nil? %>
  <div class="field">
    <label for="">
      Previous survey ID.
    </label>
    <p>
      Lorem ipsum.
    </p>
    <%= form.text_field '[settings][survey_previous_id]' %>
  </div>

  <div class="field">
    <label for="">
      Default language
    </label>
    <p>
      Lorem ipsum.
    </p>
    <%= form.collection_radio_buttons '[settings][default_language]', surveys_data("default_language"), :first, :last %>
  </div>

  <div class="field">
    <label for="">
      Participants' organisation name
    </label>
    <p>
      What is the name of the group/organisation to which the survey participants belong?
    </p>
    <%= form.text_field '[settings][participant_org_name]' %>
  </div>

  <div class="field">
    <label for="">
      1. Type of organisation.
    </label>
    <p>
      Lorem ipsum
    </p>
    <%= form.collection_radio_buttons '[settings][type_of_organisation]', surveys_data("type_of_organisation"), :first, :last %>
    <%= form.text_field '[settings][org_type_other]' %>
  </div>

  <div class="field">
    <label for="">
      2. Location of organisation.
    </label>
    <p>
      Lorem ipsum.
    </p>
    <%= form.select '[settings][location_of_organisation]', surveys_data("location_of_organisation") %>
  </div>

  <div class="field">
    <label for="">
      3. Is organisation part of a wider network of organisations?
    </label>
    <p>
      Lorem ipsum
    </p>
    <%= form.collection_radio_buttons '[settings][wider_network]', surveys_data("wider_network"), :first, :last %>
    <%= form.text_area '[settings][wider_network_details]' %>
  </div>

  <div class="field">
    <label for="">
      4. What kind of conservation activities does the organisation do?
    </label>
    <%= form.collection_check_boxes '[settings][kind_of_conservation_activities]', surveys_data("kind_of_conservation_activities"), :first, :last %>
    <p>
      Lorem ipsum
    </p>
  </div>

  <div class="field">
    <label for="">
      5. Date established
    </label>
    (Date selection)
    <%= form.date_select '[settings][session_date]', start_year: Date.current.year %>
  </div>

  <div class="field">
    <label for="">
      Organisation website/url
    </label>
    <%= form.text_field '[settings][course_url]' %>
    <p>
      Lorem ipsum
    </p>
  </div>

  <div class="field">
    <label for="">
      Size of organisation
    </label>
    <%= form.text_field '[settings][size_of_group]' %>
    <p>
      Lorem ipsum
    </p>
  </div>

  <div class="field">
    <label for="">
      6. Size of group participating in survey
    </label>
    Lorem ipsum
    <%= form.text_field '[settings][size_of_group]' %>
  </div>

  <div class="field">
    <label for="">
      7. If a sub-group, please explain why
    </label>
    Lorem ipsum
    <%= form.text_area '[settings][sub_group_explanation]' %>
  </div>

  <div class="field">
    <label for="">
      8. Organisation funding sources
    </label>
    <p>
      Lorem ipsum
    </p>
    <%= form.collection_check_boxes '[settings][organisation_funding_sources]', surveys_data("organisation_funding_sources"), :first, :last %>
  </div>

  <div class="field">
    <label for="">
      9. Geographical scope
    </label>
    <p>
      Lorem ipsum
    </p>
    <%= form.collection_radio_buttons '[settings][geographical_scope]', surveys_data("geographical_scope"), :first, :last %>
  </div>

  <div class="field">
    <label for="">
      Follow up session?
    </label>
    (Radio buttons: yes/no)
    <p>
      Lorem ipsum
    </p>
    <%= form.collection_radio_buttons '[settings][follow_up_session]', surveys_data("follow_up_session"), :first, :last %>
  </div>



<!---
  <div class="field">
    <label for="">
      Anonymity.
    </label>
    <%= form.collection_radio_buttons '[settings][anonymity]', surveys_data("anonymity"), :first, :last %>
  </div>
  --->

  <div class="field">
    <label for="">
      Session date
    </label>
    (Date selection)
    <%= form.date_select '[settings][session_date]', start_year: Date.current.year %>
  </div>

  <div class="field">
    <label for="">
      What do you hope to achieve from using GO-FOX with this group?
    </label>
    <%= form.text_area '[settings][hope_to_achieve]' %>
  </div>
<% else %>
  <p>
    Previous survey ID: <%= survey.settings["survey_previous_id"] %>
  </p>

  <p>
    Default language: <%= survey.settings["default_language"] %>
  </p>

  <p>
    Participants' organisation name: <%= survey.settings["participant_org_name"] %>
  </p>

  <p>
    Participants' level of study: <%= survey.settings["participant_level_of_study"] %>
  </p>

  <p>
    Participants' specialism: <%= survey.settings["participant_specialism"] %>
  </p>

  <p>
    Name of Course/module: <%= survey.settings["name_of_course"] %>
  </p>

  <p>
    Course website/url: <%= survey.settings["course_url"] %>
  </p>

  <p>
    Size of group: <%= survey.settings["size_of_group"] %>
  </p>

  <p>
    Follow up session?: <%= survey.settings["follow_up_session"] %>
  </p>

  <p>
    Anonymity: <%= survey.settings["anonymity"] %>
  </p>

  <p>
    What do you hope to achieve from using GO-FOX with this class?: <%= survey.settings["hope_to_achieve"] %>
  </p>
<% end %>
