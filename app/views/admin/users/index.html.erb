<h1>Admin Users</h1>

<table>
  <thead>
    <tr>
      <th>Username</th>
      <th>Organisation Name</th>
      <th>Email</h3>
      <th>Admin</h3>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.username %></td>
        <td><%= user.organisation_name %></td>
        <td><%= user.email %></td>
        <td><%= user.admin? %></td>
        <td><%= link_to 'Show', admin_user_path(user) %></td>
        <td><%= link_to 'Edit', edit_admin_user_path(user) %></td>
        <td><%= link_to 'Delete', admin_user_path(user), method: :delete, data: { confirm: 'Are you sure you want to permanently delete this user?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
